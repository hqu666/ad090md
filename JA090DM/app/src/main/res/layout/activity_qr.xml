<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/cord_reader_titol"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/zxing_custom_possible_result_points"
		android:gravity="center"
		android:text="TextView"
		android:textAlignment="center"
		android:textColor="@color/browser_actions_text_color"
		android:textSize="24sp"
		tools:layout_editor_absoluteX="176dp"
		tools:layout_editor_absoluteY="277dp"
		tools:text="@string/menu_qr_read" />

	<TextView
		android:id="@+id/cord_reader_capsion"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16px"
		android:text="TextView"
		android:textAlignment="viewStart"
		android:textSize="14sp"
		tools:layout_editor_absoluteX="176dp"
		tools:layout_editor_absoluteY="277dp"
		tools:text="連続読取をタップすると複数のバーコードを連続して読み取り、画面下のメッセージエリアに読み取ったコードをリストアップします。タップしなければ一つ読み込めたところでその内容をQRコード化します。" />

	<LinearLayout
		android:id="@+id/scam_ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<com.journeyapps.barcodescanner.DecoratedBarcodeView
			android:id="@+id/decoratedBarcodeView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:layout_weight="6"
			android:padding="8dp"
			app:layout_constraintBottom_toTopOf="@+id/release_bt"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		</com.journeyapps.barcodescanner.DecoratedBarcodeView>

		<ImageButton
			android:id="@+id/release_bt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:srcCompat="@android:drawable/ic_menu_camera"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/prevew_ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<!--<ImageView-->
		<!--android:id="@+id/preveiw_iv"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_weight="1"-->
		<!--app:srcCompat="@android:drawable/ic_menu_report_image"/>-->

		<Button
			android:id="@+id/continue_bt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/continue_titol" />

		<Button
			android:id="@+id/acsess_bt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Button"/>

		<Button
			android:id="@+id/rescan_bt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:text="@string/btf_re_scan"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/coment_ll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/qr_result_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:text="@string/about_text"/>

		<ImageView
			android:id="@+id/qr_result_iv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			app:srcCompat="@android:drawable/sym_def_app_icon"/>

	</LinearLayout>

</LinearLayout>